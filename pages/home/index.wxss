page {
  background: #fff;
}

/* 轮播图 */
.banner-swiper {
  height: 375rpx;
}

.swiper-item {
  width: 100%;
  height: 375rpx;
}

/* 网点导航 */
.nav_box {
  display: flex;
  width: 750rpx;
  background: #fff;
  margin: auto;
  margin-top: 20rpx;
  height: 120rpx;
  align-items: center;
}

.nav_logo {
  width: 70rpx;
  height: 70rpx;
  margin-left: 30rpx;
}

.nav_logo_img {
  width: 70rpx;
  height: 70rpx;
}

.nav_add_li {
  flex: 1;
  margin-left: 20rpx;
}

.nav_add_tit_1 {
  font-size: 30rpx;
  font-weight: 500;
  color: #252525;
  margin-top: 22rpx;
  float: left;
}

.nav_add_tit_2 {
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
  margin-bottom: 27rpx;
  float: left;
}

.nav_add_tit_3 {
  font-size: 24rpx;
  color: #666666;
  float: left;
  margin-top: 12rpx;
}

.icon_x {
  width: 20rpx;
  height: 20rpx;
  float: left;
  margin-top: 20rpx;
  margin-left: 110rpx;
}

.icon_d {
  width: 35rpx;
  height: 35rpx;
  float: left;
  margin-top: 12rpx;
  margin-left: 45rpx;
}

/* 分类 */
.classify_box {
  width: 100%;
  height: 180rpx;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
}

.classify_box_li {
  flex: 1;
}

.classify_box_img {
  width: 70rpx;
  height: 70rpx;
  float: left;
  margin-left: 58rpx;
  margin-top: 35rpx;
}

.classify_box_title {
  font-size: 24rpx;
  font-weight: 500;
  color: #252525;
  float: left;
  margin-left: 45rpx;
  margin-top: 25rpx;
}

/* 分类导航or吸顶 */
.classify_navbox {
  width: 100%;
  height: 90rpx;
  background: #fff;
  position: fixed;
  top: 0;
  float: left;
}

.classify_left {
  width: 50%;
  height: 88rpx;
  border-right: 1rpx solid #f3f3f3;
  border-top: 1rpx solid #f3f3f3;
  border-bottom: 1rpx solid #f3f3f3;
  line-height: 88rpx;
  float: left;
  position: relative;
}

.age_calss {
  font-size: 30rpx;
  color: #252525;
  float: left;
  margin-left: 130rpx;
}

.age_icon {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-top: 19rpx;
  margin-left: 20rpx;
}

.classify_right {
  width: 49%;
  height: 88rpx;
  border-top: 1rpx solid #f3f3f3;
  border-bottom: 1rpx solid #f3f3f3;
  line-height: 88rpx;
  float: right;
  position: relative;
}

.display_show {
  width: 100%;
  height: 190rpx;
  position: relative;
  float: left;
  background: #fff;
}

.display_none {
  display: none;
}

.classify_btn {
  width: 150rpx;
  height: 48rpx;
  background: #f3f3f3;
  border-radius: 40rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #252525;
  text-align: center;
  line-height: 50rpx;
  float: left;
}


/* 图书列表 */
.book_box {
  width: 100%;
  height: 2900rpx;
  background: #fff;
  margin-top: 120rpx;
}

.book_list {
  width: 347rpx;
  height: 542rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0rpx 6rpx 12rpx rgba(34, 25, 25, 0.3);
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.book_list_top {
  height: 320rpx;
  border: 1rpx solid #f3f3f3;
  background: #F8FDFA;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}

.book_list_img {
  width: 240rpx;
  height: 240rpx;
  margin-left: 50rpx;
  margin-top: 25rpx;
}

.book_list_name {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.book_list_name_tit {
  font-size: 24rpx;
  font-weight: 500;
  color: #252525;
  float: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.book_list_name_num {
  font-size: 20rpx;
  color: #999999;
  float: right;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.book_list_btn {
  width: 100%;
  height: 50rpx;
  margin-top: 4rpx;
}

.book_list_btn_tit {
  width: 140rpx;
  height: 30rpx;
  background: #f3f3f3;
  border-radius: 20rpx;
  float: left;
  font-size: 20rpx;
  color: #999999;
  line-height: 30rpx;
  text-align: center;
  margin-left: 18rpx;
  margin-top: 10rpx;
}

/* 底部 */
.footer {
  width: 100%;
  height: 90rpx;
  background: #f3f3f3;
  line-height: 90rpx;
}

.footer_line_1 {
  width: 70rpx;
  height: 1rpx;
  background: #b5b5b5;
  float: left;
  margin-top: 45rpx;
  margin-left: 33%;
}

.footer_title {
  font-size: 20rpx;
  color: #b5b5b5;
  float: left;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.footer_line_2 {
  width: 70rpx;
  height: 1rpx;
  background: #b5b5b5;
  float: left;
  margin-top: 45rpx;
}