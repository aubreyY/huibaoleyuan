/* 轮播图 */
.banner-swiper {
  height: 375rpx;
}

.swiper-item {
  width: 100%;
  height: 375rpx;
}

/* 分类 */
.classify_box {
  width: 100%;
  height: 180rpx;
  background: #fff;
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.classify_box_li {
  flex: 1;
}

.classify_box_img {
  width: 70rpx;
  height: 70rpx;
  margin-left: 35rpx;
  margin-top: 40rpx;
}

.classify_box_title {
  width: 100rpx;
  height: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #252525;
  float: left;
  margin-left: 25rpx;
}

/* 分类导航or吸顶 */
.classify_navbox_show {
  width: 100%;
  height: 90rpx;
  background: #fff;
  position: fixed;
  top: -15rpx;
  float: left;
}

.classify_navbox_none {
  width: 100%;
  height: 90rpx;
  background: #fff;
  position: relative;
  top: -15rpx;
  float: left;
}

.classify_left {
  width: 50%;
  height: 88rpx;
  background: #fff;
  border-top: 1rpx solid #f1f1f1;
  border-bottom: 1rpx solid #f1f1f1;
  line-height: 88rpx;
  float: left;
  position: relative;
  top: 15rpx;
}

.age_calss_show {
  width: 130rpx;
  font-size: 30rpx;
  color: #252525;
  float: left;
  margin-left: 110rpx;
  text-align: center;
}

.age_calss_col {
  width: 130rpx;
  font-size: 30rpx;
  color: #3EDD8D;
  float: left;
  margin-left: 110rpx;
  text-align: center;
}

.age_icon {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-top: 15rpx;
  margin-left: 20rpx;
}

.border_line {
  width: 1rpx;
  height: 45rpx;
  float: left;
  background: #f1f1f1;
  position: absolute;
  left: 100%;
  top: 23rpx;
  z-index: 9999;
}

.classify_right {
  width: 49.7%;
  height: 88rpx;
  background: #fff;
  border-top: 1rpx solid #f1f1f1;
  border-bottom: 1rpx solid #f1f1f1;
  line-height: 88rpx;
  float: left;
  position: relative;
  top: 15rpx;
}

.display_show {
  width: 100%;
  height: 190rpx;
  position: absolute;
  background: #fff;
  top: 106rpx;
}

.display_none {
  width: 100%;
  height: 190rpx;
  position: absolute;
  float: left;
  background: #fff;
  top: 15rpx;
  display: none;
}

.classify_btn_show {
  width: 150rpx;
  height: 48rpx;
  background: #f3f3f3;
  border-radius: 40rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #252525;
  text-align: center;
  line-height: 50rpx;
  float: left;
}

/* 图书列表 */
.book_box {
  width: 100%;
  height: 1500px;
  background: #fff;
  margin-top: 105rpx;
}

.book_list {
  width: 347rpx;
  height: 552rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(54, 72, 64, 0.2);
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.book_list_top {
  height: 320rpx;
  border-bottom: 1rpx solid #f1f1f1;
  background: #F8FDFA;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}

.book_list_img {
  width: 240rpx;
  height: 240rpx;
  margin-left: 50rpx;
  margin-top: 25rpx;
  border-radius: 12rpx;
}

.book_list_name {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.book_list_name_tit {
  width: 240rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #252525;
  float: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.book_list_name_num {
  font-size: 20rpx;
  color: #999999;
  float: right;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.book_list_btn {
  width: 350rpx;
  height: 130rpx;
}

.book_list_btn_tit {
  width: 130rpx;
  height: 30rpx;
  background: #f3f3f3;
  border-radius: 20rpx;
  float: left;
  font-size: 20rpx;
  color: #999999;
  line-height: 30rpx;
  text-align: center;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.book_list_add {
  width: 100%;
  border-top: 1rpx solid #f1f1f1;
}

.book_list_add image {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.book_list_add_tit {
  width: 275rpx;
  font-size: 20rpx;
  color: #999999;
  float: left;
  margin-left: 15rpx;
  margin-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 底部 */
.footer {
  width: 100%;
  height: 90rpx;
  background: #f3f3f3;
  line-height: 90rpx;
}

.footer_line_1 {
  width: 70rpx;
  height: 1rpx;
  background: #b5b5b5;
  float: left;
  margin-top: 45rpx;
  margin-left: 33%;
}

.footer_title {
  font-size: 20rpx;
  color: #b5b5b5;
  float: left;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.footer_line_2 {
  width: 70rpx;
  height: 1rpx;
  background: #b5b5b5;
  float: left;
  margin-top: 45rpx;
}