.userfrom {
    display: flex;
    background: #fff;
    text-align: center;
}

.userfrom_item {
    flex: 1;
    position: relative;
}

.userfrom_item {
    padding: 50rpx 0;
    /* display: block; */
    color: #666666;
    
}

.userfrom_item image {
    width: 50rpx;height: 50rpx;
}

.userfrom_item view {
    font-size: 24rpx;
    color: #666666;
}
.userfrom_item:last-child view{
  color: #f5315a ;
}
.userfrom_item:last-child:after {
    content: '';
    display: block;
    width: 1px;
    background: #edeaea;
    height: 100rpx;
    position: absolute;
    left: 0;
    top: 45rpx;
}

.user_meta {
  margin-top:20rpx;
}

.user_meta navigator,.user_meta view {
    display: block;
    background: #fff;
    position: relative;
    line-height: 100rpx;
    height: 100rpx;
    padding-left: 30rpx;
    color: #333333;
    font-size: 34rpx;
    border-bottom: 1px solid #f0f0f0;
}

.meta_jt{
    position: absolute;
    right: 0;
    top: 0;
    width: 100rpx;
}

.user_top{
    height: 250rpx;
    position: relative;
    overflow: hidden;
}
.user_top_bg{
    width: 100%;height: 250rpx;
    position: absolute;
   

}
.user_top_con{
    position: absolute;
    left: 30rpx;top: 70rpx;width: 100%;height: 250rpx;
}
.head{
    width: 110rpx;height: 110rpx;
    border-radius: 110rpx;
    overflow: hidden;
}
.userinfo{
 color: #fff;
 position: absolute;
 left: 150rpx;
 top: 25rpx;
}
.nickname{
   font-size: 36rpx;
}
.integral{
  font-size: 24rpx;
}
.sign{
  display: inline-block;
  padding: 5rpx 20rpx;
  border: 1px solid #fff;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
  position: absolute;right: 60rpx;top: 40rpx;
}
.sign image{
  width: 30rpx;height: 30rpx;
  vertical-align: middle;
}
.icon{
  width: 50rpx;height: 50rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}



