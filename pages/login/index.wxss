page{
    background: #fff;
}
.login_nav{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
}
.left_line{
    width: 40%;
    height: 1rpx;
    background: #f1f1f1;
    float: left;
    margin-top: 40rpx;
}
.login_tit{
    font-size: 24rpx;
    color: #999999;
    float: left;
    margin-left: 5rpx;
}
.right_line{
    width: 40%;
    height: 1rpx;
    background: #f1f1f1;
    float: right;
    margin-top: 40rpx;
}
.wx_btn{
    width: 95%;
    height: 90rpx;
    background: #3EDD8D;
    border: 2rpx solid #fff;
    border-radius: 70rpx;
    margin: 0 auto;
    margin-top: 30rpx;
    font-size: 32rpx;
    color: #fff;
    line-height: 90rpx;
}
.wx_btn image{
    width: 44rpx;
    height: 44rpx;
    margin-left: 28%;
    margin-top: 22rpx;
    float: left;
}
.wx_btn text{
    float: left;
    margin-left: 11rpx;
}
.phone_btn{
    width: 95%;
    height: 90rpx;
    background: #fff;
    border: 2rpx solid #3EDD8D;
    border-radius: 70rpx;
    margin: 0 auto;
    margin-top: 30rpx;
    font-size: 32rpx;
    color: #3EDD8D;
    line-height: 90rpx;
