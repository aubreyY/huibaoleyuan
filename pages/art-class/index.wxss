/* 艺术创想 */
.lang_nav {
    width: 100%;
    height: 90rpx;
    background: #fff;
    position: fixed;
    top: 0;
    line-height: 90rpx;
    border-bottom: 1rpx solid #f1f1f1;
}

.lang_nav_left {
    width: 50%;
    height: 90rpx;
    float: left;
}
.border_line{
    width: 1rpx;
    height: 45rpx;
    float: left;
    background: #f1f1f1;
    margin-top: 25rpx;
}
.lang_nav_right {
    width: 49%;
    height: 90rpx;
    float: left;
}

.age_calss {
    width: 130rpx;
    font-size: 30rpx;
    float: left;
    margin-left: 80rpx;
    text-align: center;
}

.age_icon {
    width: 60rpx;
    height: 60rpx;
    float: left;
    margin-top: 15rpx;
    margin-left: 20rpx;
}

.display_show {
    width: 100%;
    height: 190rpx;
    position: relative;
    float: left;
    background: #fff;
    top: 1rpx;
}

.display_none {
    display: none;
}

.classify_btn_show {
    width: 150rpx;
    height: 48rpx;
    background: #f3f3f3;
    border-radius: 40rpx;
    margin-top: 30rpx;
    margin-left: 30rpx;
    font-size: 24rpx;
    color: #252525;
    text-align: center;
    line-height: 50rpx;
    float: left;
}

/* 列表 */
.book_list_first {
    width: 100%;
    height: 200rpx;
    background: #fff;
    margin-top: 105rpx;
    z-index: -9999;
}

.book_list {
    width: 100%;
    height: 200rpx;
    background: #fff;
    margin-top: 15rpx;
    z-index: -9999;
}

.book_img {
    width: 160rpx;
    height: 160rpx;
    background: #f3f3f3;
    margin-left: 30rpx;
    margin-top: 22rpx;
    float: left;
}

.book_img image {
    width: 120rpx;
    height: 120rpx;
    margin-left: 20rpx;
    margin-top: 12rpx;
}

.book_text {
    width: 470rpx;
    height: 200rpx;
    float: left;
}

.book_title {
    width: 100%;
    font-size: 26rpx;
    color: #252525;
    float: left;
    margin-left: 12rpx;
    margin-top: 16rpx;
}

.book_font {
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    float: left;
    margin-top: 20rpx;
}

.book_font text {
    width: 140rpx;
    height: 30rpx;
    background: #f3f3f3;
    border-radius: 40rpx;
    font-size: 20rpx;
    color: #999999;
    float: left;
    margin-left: 10rpx;
}

.book_icon {
    width: 40rpx;
    height: 40rpx;
    float: right;
    margin-top: 80rpx;
    margin-right: 35rpx;
}