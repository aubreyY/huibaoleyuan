/* 列表 */
.bookbag_list{
    width: 100%;
    height: auto;
    margin-top: 105rpx; 
}
.book_list_first {
    width: 100%;
    height: 200rpx;
    background: #fff;
    margin-top: 15rpx;
}

.book_list {
    width: 100%;
    height: 200rpx;
    background: #fff;
    margin-top: 15rpx;
    z-index: -9999;
}

.book_img {
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
    margin-left: 20rpx;
    margin-top: 15rpx;
    float: left;
}

.book_img image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
}

.book_text {
    width: 470rpx;
    height: 200rpx;
    float: left;
}

.book_title {
    width: 100%;
    font-size: 26rpx;
    color: #252525;
    float: left;
    margin-left: 15rpx;
    margin-top: 16rpx;
}

.book_font {
    width: 170rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    float: left;
    margin-top: 25rpx;
}

.book_font text {
    width: 130rpx;
    height: 30rpx;
    background: #f3f3f3;
    border-radius: 40rpx;
    font-size: 20rpx;
    color: #999999;
    float: left;
    margin-left: 10rpx;
}

.book_icon {
    width: 40rpx;
    height: 40rpx;
    float: right;
    margin-top: 80rpx;
    margin-right: 35rpx;
}