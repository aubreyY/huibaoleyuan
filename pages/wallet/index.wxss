/* 押金 */
.deposit {
    width: 100%;
    height: 250rpx;
    background: #ffffff;
    margin-top: 20rpx;
}

.deposit_content {
    width: 100%;
    height: 150rpx;
    border-bottom: 1rpx solid #f3f3f3;
}

.deposit_tit {
    font-size: 30rpx;
    color: #252525;
    font-weight: bold;
    float: left;
    margin-top: 62rpx;
    margin-left: 30rpx;
}

.deposit_num {
    font-size: 42rpx;
    color: #252525;
    font-weight: bold;
    float: right;
    margin-right: 30rpx;
    margin-top: 55rpx;
}

/* 交易记录or支付押金/提现 */
.deal {
    width: 100%;
    height: 100rpx;
}

.deal_tit {
    font-size: 24rpx;
    color: #999999;
    float: left;
    margin-left: 30rpx;
    margin-top: 33rpx;
}

.deal_btn {
    width: 160rpx;
    height: 48rpx;
    background: #3EDD8D;
    border-radius: 30rpx;
    float: right;
    margin-right: 35rpx;
    margin-top: 33rpx;
    font-size: 24rpx;
    line-height: 48rpx;
    text-align: center;
    color: #ffffff;
}
