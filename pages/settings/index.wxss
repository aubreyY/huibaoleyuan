/* 设置 */
.user_set{
    width: 100%;
    height: 90rpx;
    background: #fff;
    margin-top: 20rpx;
    line-height: 90rpx;
}
.user_set_tit{
    font-size: 30rpx;
    font-weight: 500;
    color: #252525;
    margin-left: 35rpx;
    float: left;
}
.user_set_icon{
    width: 35rpx;
    height: 35rpx;
    float: right;
    margin-right: 35rpx;
    margin-top: 30rpx;
}
.user_set_img{
    width: 80rpx;
    height: 80rpx;
    border-radius: 70rpx;
    float: right;
    margin-top: 5rpx;
    margin-right: 20rpx;
    overflow:hidden;
}