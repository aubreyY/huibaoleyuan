/* 头部背景 */
.user_head_color,
.user_head_bg {
  width: 100%;
  height: 273rpx;
  position: relative;
  z-index: 100;
}

/* 头像信息 */
.user_nav {
  width: 90%;
  height: 212rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0rpx 6rpx 14rpx rgba(34, 25, 25, 0.3);
  margin: 0 auto;
  position: absolute;
  top: 100rpx;
  left: 38rpx;
  z-index: 1000;
}

.user_nav_img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 110rpx;
  margin: 0 auto;
  position: relative;
  top: -60rpx;
  overflow: hidden;
}

.user_nav_name {
  font-size: 36rpx;
  color: #252525;
  font-weight: 500;
  text-align: center;
  position: relative;
  top: -55rpx;
}

.user_nav_tit {
  width: 200rpx;
  height: 40rpx;
  border: 1rpx solid #f6f6f6;
  border-radius: 30rpx;
  margin: 0 auto;
  position: relative;
  top: -60rpx;
  margin-top: 35rpx;
  font-size: 20rpx;
  color: #999999;
  text-align: center;
  line-height: 40rpx;
}

/* 钱包or借阅 */
.user_content {
  width: 100%;
  height: 370rpx;
  background: #fff;
  position: relative;
  top: -80rpx;
}

.user_wallet {
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid #f3f3f3;
  position: relative;
  top: 190rpx;
}

.user_wallet_icon {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-left: 35rpx;
  margin-top: 15rpx;
}

.user_wallet_tit {
  font-size: 30rpx;
  color: #252525;
  float: left;
  margin-top: 25rpx;
  margin-left: 5rpx;
}

.icon_d {
  width: 35rpx;
  height: 35rpx;
  float: right;
  margin-top: 29rpx;
  margin-right: 30rpx;
}

/* 关于我们 */
.user_about {
  width: 100%;
  height: 90rpx;
  background: #fff;
  position: relative;
  top: -60rpx;
}

.user_about_icon {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-left: 35rpx;
  margin-top: 15rpx;
}

.user_about_tit {
  font-size: 30rpx;
