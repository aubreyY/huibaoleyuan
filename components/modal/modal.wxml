<!-- 输入框弹窗 -->
<view class="input_popup" hidden="{{flag}}">
  <view class='input_popup_container'>
    <view class="input_popup_title">{{title}}</view>
    <input class="input_popup_con" placeholder="{{content}}" />
    <view class="input_popup_btn">
      <view class="btn_no" bindtap='_error'>{{btnNO}}</view>
      <view class="btn_ok" bindtap='_success'>{{btnOK}}</view>
    </view>
  </view>
</view>