<!-- 支付彈窗 -->
<view class="modal" hidden="{{hideModal}}">
  <view class="modal_bg"></view>
  <view class="bottom_modal" animation="{{animationData}}">
    <view class="modal_cont_nav">
      <text class="modal_cont_nav_tit">支付押金</text>
      <image bindtap="prompt_show" class="modal_exit_icon" mode="widthFix" src="/image/exit_icon.png" />
    </view>
    <view class="modal_num">¥199.00</view>
    <view class="modal_num_tit">一次性支付，随时可退</view>
    <view class="modal_btn">微信支付</view>
  </view>
  <view class="tost" hidden="{{tost}}">
    <view class="tost_title">确定退出了吗？</view>
    <view class="tost_btn">
      <view class="tost_btn_left" bindtap="prompt_hide">取消</view>
      <view class="tost_btn_right" bindtap="hideModal">确定</view>
    </view>
  </view>
</view>
