/* 支付弹窗*/
.modal {
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.modal_bg {
    position: absolute;
    z-index: 1000;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, .5);
}

.bottom_modal {
    position: absolute;
    z-index: 10001;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 435rpx;
    background-color: #fff;
    transform: translateY(100%);
}
.modal_cont_nav{
    width: 100%;
    height: 100rpx;
    border-bottom: 1rpx solid #f3f3f3;
}
.modal_cont_nav_tit{
    font-size: 36rpx;
    color: #252525;
    float: left;
    margin-left: 41%;
    margin-top: 30rpx;
}
.modal_exit_icon{
    width: 60rpx;
    height: 60rpx;
    float: right;
    margin-right: 35rpx;
    margin-top: 23rpx;
}
.modal_num{
    width: 100%;
    height: 100rpx;
    font-size: 58rpx;
    font-weight: bold;
    color: #252525;
    text-align: center;
    line-height: 100rpx;
    margin-top: 15rpx;
}
.modal_num_tit{
    width: 100%;
    height: 50rpx;
    font-size: 24rpx;
    font-weight: bold;
    color: #999999;
    text-align: center;
    line-height: 50rpx;
    margin-top: 15rpx;
}
.modal_btn{
    width: 690rpx;
    height: 80rpx;
    background: #3EDD8D;
    border-radius: 40rpx;
    margin: 0 auto;
    margin-top: 45rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
}

/* 剩余押金弹窗 */
.total_deposit{
    width: 100%;
    height: 85rpx;
    border-bottom: 1rpx solid #f3f3f3;
    line-height: 85rpx;
}
.modal_num_text_1{
    font-size: 30rpx;
    color: #999999;
    float: left;
    margin-left: 25rpx;
}
.modal_num_text_2{
    font-size: 30rpx;
    font-weight: 500;
    color: #252525;
    float: right;
    margin-right: 25rpx;
}
