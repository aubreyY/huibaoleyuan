/* 支付弹窗*/
.modal {
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.modal_bg {
    position: absolute;
    z-index: 1000;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, .5);
}

.bottom_modal {
    position: absolute;
    z-index: 10001;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 500rpx;
    background-color: #fff;
    transform: translateY(100%);
}

.modal_cont_nav {
    width: 100%;
    height: 100rpx;
    border-bottom: 1rpx solid #f1f1f1;
}

.modal_cont_nav_tit {
    font-size: 36rpx;
    color: #252525;
    float: left;
    margin-left: 41%;
    margin-top: 30rpx;
}

.modal_exit_icon {
    width: 60rpx;
    height: 60rpx;
    float: right;
    margin-right: 35rpx;
    margin-top: 23rpx;
}

.modal_num {
    width: 100%;
    height: 100rpx;
    font-size: 58rpx;
    font-weight: bold;
    color: #252525;
    text-align: center;
    line-height: 100rpx;
    margin-top: 30rpx;
}

.modal_num_tit {
    width: 100%;
    height: 50rpx;
    font-size: 24rpx;
    color: #999999;
    text-align: center;
    line-height: 50rpx;
    margin-top: 15rpx;
}

.modal_btn {
    width: 690rpx;
    height: 80rpx;
    background: #3EDD8D;
    border-radius: 40rpx;
    margin: 0 auto;
    margin-top: 60rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
}

/* 输入框弹窗 */
.input_popup {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);
}

.input_popup_container {
    width: 600rpx;
    height: auto;
    position: absolute;
    left: 50%;
    top: 50%;
    border-radius: 12rpx;
    transform: translate(-50%, -50%);
    overflow: hidden;
    background: #fff;
}

.input_popup_title {
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 36rpx;
    color: #252525;
    margin-top: 40rpx;
}

.input_popup_con {
    font-size: 30rpx;
    color: #999999;
    height: 80rpx;
    text-align: left;
    line-height: 80rpx;
    margin-left: 35rpx;
}

.input_popup_btn {
    width: 100%;
    height: 80rpx;
    border-top: 1rpx solid #f1f1f1;
    margin-top: 25rpx;
}

.btn_no {
    width: 295rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 36rpx;
    color: #999999;
    text-align: center;
    float: left;
}

.btn_line {
    width: 1rpx;
    height: 40rpx;
    background: #f1f1f1;
    float: left;
    margin-top: 20rpx;
}

.btn_ok {
    width: 295rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 36rpx;
    color: #3EDD8D;
    text-align: center;
    float: left;
}