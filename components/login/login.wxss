/* components/login/login.wxss */
.pop {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 400rpx;
    background: #fff;
    border-radius: 15rpx;
    overflow: hidden;
}

.tit {
    font-size: 40rpx;
    text-align: center;
    display: block;
    line-height: 80rpx;
    border-bottom: 1px solid #f3f3f3;
    font-size: 30rpx;
    color: #252525;
}

.bg {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: 999999;
}

.boxbtn {
    padding: 30rpx 30rpx;
}

.loginbtn {
    background: #fff !important;
    border: 1px solid #09bb07 !important;
    color: #09bb07 !important;
    font-size: 30rpx !important;
    border-radius: 100rpx !important;
}

.loginbtn image {
    width: 44rpx;
    height: 44rpx;
    vertical-align: middle;
}